require 'rake'
require 'hanami/rake_tasks'
require 'rake/testtask'

Rake::TestTask.new do |t|
  t.pattern = 'spec/**/*_spec.rb'
  t.libs    << 'spec'
  t.warning = false
end

task default: :test
task spec: :test

task clear_users: :environment do
  # bundle exec rake clear_users
  # UserRepository.new.clear
  puts 'Define Task'
end

